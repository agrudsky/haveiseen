<h1>Users</h1>

<p><a href="/new_user">Add a New User</a></p>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Name</th>
      <th>Gender</th>
      <th>Email</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  <% @users.each do |user| %>
    <tr>
          <td><%= user.username %></td>
          <td><%= user.name %></td>
          <td><%= user.gender %></td>
          <td><%= user.email %></td>
      <% if session['user_id'] %>
        <td><a href="/users/<%= user.id %>">Show</a></td>
        <td><a href="/users/<%= user.id %>/edit">Edit</a></td>
        <td><a href="/users/<%= user.id %>/destroy">Destroy</a></td>
      <% end %>
    </tr>
  <% end %>
  </tbody>
</table>

